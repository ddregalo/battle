<% if @session.current_turn == @session.player_1 %>
  <h2><%= @session.player_1.name %> painted <%= @session.player_2.name %></h2>
<% else %>
  <h2><%= @session.player_2.name %> painted <%= @session.player_1.name %></h2>
<% end %>

<h4><%= @session.player_1.name %>: <%= @session.player_1.paint_points %> Paint Points</h4>
<h4><%= @session.player_2.name %>: <%= @session.player_2.paint_points %> Paint Points</h4>

<% if @session.player_1.paint_points == 0 %>
  <h1><%= @session.player_1.name %> just got PAINTED!!</h1>
<% elsif @session.player_2.paint_points == 0 %>
  <h1><%= @session.player_2.name %> just got PAINTED!!</h1>
<% else %>
  <form action='/switch-turns' method='post'>
    <input type="submit" value='PLAY NEXT TURN'>
  </form>
<% end %>
